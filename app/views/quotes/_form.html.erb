<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%# The autofocus option is here to focus the corresponding 
  input field when the form appears on the screen, so we don't have to use the mouse and can type directly in it.  %>
  <%= link_to "Cancel", quotes_path, class: "btn btn--light"%>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>